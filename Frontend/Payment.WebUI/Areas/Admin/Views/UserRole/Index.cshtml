@model UserRoleViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kullanıcı Rolleri</h4>
            <div class="basic-form">
                <form method="post" action="/Admin/UserRole/UpdateRoles" id="roleForm">
                    <input type="hidden" name="userId" value="@Model.UserId" />
                    <div class="form-group">
                        <div class="row">
                            @foreach (var role in Model.AllRoles)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" name="roles" class="custom-control-input" id="@role.Name" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked" : "")>
                                        <label class="custom-control-label" for="@role.Name">@role.Name</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-4">Rolleri Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>


<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .card-body {
        background: #f9f9f9;
    }
    .custom-control-input:checked ~ .custom-control-label::before {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
    .form-check-label {
        font-weight: 500;
    }
</style>





















