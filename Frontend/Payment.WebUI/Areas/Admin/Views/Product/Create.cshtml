@model CreateProductDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <div>
        <input type="text" asp-for="Name" class="form-control" placeholder="Ürün Adı" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div>
        <input type="text" asp-for="Description" class="form-control" placeholder="Açıklama" />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <br />
    <div>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>

    </div>
    <br />
    <div>
        <input type="text" asp-for="Price" class="form-control" placeholder="Fiyat" />
        <span asp-validation-for="Price" class="text-danger"></span>

    </div>
    <br />
    <div>
        <input type="text" asp-for="DiscountRate" class="form-control" placeholder="İndirim Oranı" />
        <span asp-validation-for="DiscountRate" class="text-danger"></span>

    </div>
    <br />
    <div>
        <input type="text" asp-for="Stock" class="form-control" placeholder="Stok Sayısı" />
        <span asp-validation-for="Stock" class="text-danger"></span>

    </div>
    <br />
    <div>
        <input type="text" asp-for="CategoryId" class="form-control" placeholder="Kategori ID" />
        <span asp-validation-for="CategoryId" class="text-danger"></span>

    </div>
    <br />
    <button class="btn btn-primary">Ürün Ekle</button>
</form>