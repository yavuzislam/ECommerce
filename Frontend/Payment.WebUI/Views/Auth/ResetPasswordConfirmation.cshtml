@{
    ViewData["Title"] = "ResetPasswordConfirmation";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h2 class="text-success mb-4">Şifreniz Başarıyla Sıfırlandı</h2>
                    <p class="text-muted mb-4">Şifrenizi başarıyla sıfırladınız. Artık yeni şifrenizle giriş yapabilirsiniz.</p>
                    <a href="@Url.Action("Login", "Auth")" class="btn btn-primary btn-lg">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-size: 18px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    h2 {
        font-weight: bold;
    }

    .card-body {
        padding: 40px;
    }

    .text-muted {
        font-size: 16px;
    }

    .text-success {
        color: #28a745;
    }
</style>
