@model ErrorModel
@{
    ViewData["Title"] = "ErrorPage";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="error404-area pt-30 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="error-wrapper text-center ptb-50 pt-xs-20">
                    <div class="error-text">
                        <h1>@Model.ErrorCode</h1> <!-- Hata kodu burada dinamik olarak gösteriliyor -->
                        <h2>@Model.ErrorMessage</h2> <!-- Hata mesajı burada dinamik olarak gösteriliyor -->
                    </div>
                    <div class="search-error">
                        <form id="search-form" action="#">
                            <input type="text" placeholder="Search">
                            <button><i class="zmdi zmdi-search"></i></button>
                        </form>
                    </div>
                    <div class="error-button">
                        <a href="@Url.Action("Index", "Home")">Ana sayfaya geri dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>