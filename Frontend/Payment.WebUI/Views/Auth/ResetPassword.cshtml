@model ResetPasswordDto
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="text-center mb-4">Şifre Sıfırla</h2>
                    <p class="text-center text-muted mb-4">Lütfen yeni şifrenizi girin ve şifrenizi sıfırlayın.</p>

                    <form method="post">
                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Email" />

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Yeni Şifre</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Yeni şifrenizi girin" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Yeni Şifreyi Tekrarla</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Yeni şifrenizi tekrar girin" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Şifreyi Sıfırla</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Özel Stil -->
<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-control {
        padding: 10px;
        border-radius: 5px;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #007bff;
        }

    .text-center {
        color: #333;
    }

    .text-muted {
        font-size: 14px;
    }
</style>
